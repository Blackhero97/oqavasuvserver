# MongoDB Atlas (PRODUCTION DATABASE)
# ⚠️ Real credentials .env faylida bo'lishi kerak
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/YOUR_DATABASE?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Origins (Cloud URLs)
# ⚠️ Netlify va Render URL'lari qo'shilgan
CORS_ORIGINS=https://bm-crm-test.netlify.app,http://localhost:5173

# Hikvision Configuration (optional - only if using local device)
HIKVISION_IP=192.168.100.193
HIKVISION_USERNAME=admin
HIKVISION_PASSWORD=YOUR_HIKVISION_PASSWORD

# Telegram Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Webhook URL (for production deployment on Render)
# ⚠️ Render'da deploy qilgandan keyin bu URL ni yangilang
WEBHOOK_URL=https://your-app-name.onrender.com

